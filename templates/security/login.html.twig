{% extends 'base.html.twig' %}

{% block title %}Tim Store - Connexion
{% endblock %}

{% block body %}
	<h1 class="h1">Connexion</h1>
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}


		<div class="connexionContent">
			<div class="connexionContentInput">
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder=" Saisir votre Email ici  " required autofocus>
				<label for="inputPassword">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder=" Saisir votre Mot de passe ici  " required>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
<div class="connexionContentBtn">
			<button class="btn " type="submit">
				Se connecter
			</button>
			<div >
				<a href="{{ path('app_register') }}">c√©er un compte</a>
	</div></div>
		</div>
	</form>
{% endblock %}
