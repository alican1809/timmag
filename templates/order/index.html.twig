{% extends 'base.html.twig' %}

{% block title %}Votre Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

<h3>valider les informations</h3>

{{form_start(form, {action:path('app_order_recap') })}}
{{form_end(form)}}

{% if cart|length > 0 %}
		{%set total=null %}
		{% for product in cart %}
			<img src="/uploads/{{product.product.illustration}}" alt="">
			<div>
				<a href="{{ path('app_product' , {'slug' : product.product.slug }) }}">{{product.product.name}}</a>
			</div>
			<div>{{product.product.subtitle}}</div>
			<div>{{ (product.product.price/100)|number_format(2,',','.') }}€</div>
            		<div>
				<a href="{{ path('app_removeOne_cart', {id: product.product.id}) }}">-</a>
			</div>
			<div>x{{product.quantity}}</div>

		<div>
				<a href="{{ path('app_add_cart', {id: product.product.id}) }}">+</a>
			</div>

			<div>{{ ((product.product.price*product.quantity)/100)|number_format(2,',','.') }}€</div>
			<div>
				<a href="{{ path('app_delete_cart', {id: product.product.id}) }}">suppPro</a>
			</div>
			{% set total = total+(product.product.price*product.quantity) %}
			
		{% endfor %}
		{{ (total/100)|number_format(2,',','.') }}€
		{{cart|length}}	
	{% else %}
		panier vide
	{% endif %}

{% endblock %}
