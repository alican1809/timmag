{% extends 'base.html.twig' %}

{% block title %}Tim Stores - Produits
{% endblock %}

{% block body %}
	<div class="homeContent3">
	<h1 class="h1">Produits</h1>
	<p class="textSearch ">Rechercher vos Tim dans la barre de recherche :</p>
	<input  type="text" autocomplete="off" placeholder="Recherche" id="searchInput" >
	<div class="prodDashboard">
	
	{% for product in products %}
		<div class="product">
			<div class="prodImg" width="100%">
			<a width="100%" href="{{ path('app_product' , {'slug' : product.slug }) }}" ><img width="100%"  src="/uploads/{{product.illustration}}" alt="product.name"></a>
			</div>
			<div class="prodText">
				<div class="prodName"><a class=" name recherche" href="{{ path('app_product' , {'slug' : product.slug }) }}">{{product.name}}</a></div>
				<div class="prodSubtitle troc">{{product.subtitle}}</div>
				<div class="prodBlock">
					<div class="addBtn btn"><a class="btn" href="{{ path('app_add_cart', {id: product.id}) }}">Ajouter</a></div>
					<div class="prodPrice">{{ (product.price/100)|number_format(2,',','.') }}â‚¬</div>
				</div>
			</div>
		</div>
	{% endfor %}
	</div>        </div>

{% endblock %}
